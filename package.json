{
  "name": "space-all-app",
  "private": true,
  "version": "0.0.1",
  "main": "electron/main/main.js",
  "type": "commonjs",
  "scripts": {
    "vite-dev": "vite",
    "electron-dev": "nodemon --exec electron . --watch ./ --ext .js,.html,.css,.vue",
    "build": "vue-tsc && vite build",
    "dist": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3",
    "jsonfile": "^6.1.0",
    "mkdirp": "^3.0.1",
    "universalify": "^2.0.0",
    "vue": "^3.3.4",
    "vue-i18n": "^9.4.1",
    "vue-router": "4"
  },
  "devDependencies": {
    "@types/node": "^20.6.3",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.30",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5"
  },
  "build": {
    "productName": "all on one",
    "appId": "all-in-one",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "electron"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "icon": "./electron/log.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "linux": {}
  }
}
